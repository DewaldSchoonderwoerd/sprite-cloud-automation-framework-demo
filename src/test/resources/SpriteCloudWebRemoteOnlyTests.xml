<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Sprite Cloud Automation Framework Web Only">

    <parameter name="environment" value="QA"/>

    <test name="Chrome Login Test">
        <parameter name="platformType" value="WEB"/>
        <parameter name="browserName" value="CHROME-REMOTE"/>

        <classes>
            <class name="com.sprite.cloud.automation.framework.web.bookstore.LoginTest"/>
        </classes>
    </test>

    <test name="Firefox Login Test">
        <parameter name="platformType" value="WEB"/>
        <parameter name="browserName" value="FIREFOX-REMOTE"/>

        <classes>
            <class name="com.sprite.cloud.automation.framework.web.bookstore.LoginTest"/>
        </classes>
    </test>

    <test name="Add Book To Collection Test">
        <parameter name="platformType" value="WEB"/>
        <parameter name="browserName" value="CHROME-REMOTE"/>

        <classes>
            <class name="com.sprite.cloud.automation.framework.web.bookstore.AddBookToCollectionTest"/>
        </classes>
    </test>

</suite>
